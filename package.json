{
  "name": "surgery-manager",
  "scripts": {
    "dev": "npm run mongo:start && concurrently -n \"SERVER,CLIENT\" -c \"blue,green\" \"npm run server\" \"npm run client\"",
    "server": "cd server && npm start",
    "client": "cd client && npm run dev",
    "mongo:start": "docker-compose up -d mongodb && echo 'MongoDB started'",
    "mongo:stop": "docker-compose down",
    "seeder": "cd server && node surgery-seeder.js"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
